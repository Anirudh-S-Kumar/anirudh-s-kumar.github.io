/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;

body {
    --tw-bg-opacity: 1;
    background-color: rgba(38, 51, 84, var(--tw-bg-opacity));
    text-color: rgba(255, 255, 255, var(--tw-text-opacity));
  }

@font-face {
    font-family: 'Fira Mono';
    src: url('fira.otf') format('opentype');
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }